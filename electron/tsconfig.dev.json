{
	"compilerOptions": {
		"target": "ESNext",
		"module": "commonjs",
		"lib": ["ESNext", "DOM"],
		"allowJs": true,
		"outDir": "build",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"downlevelIteration": true,
		"sourceMap": true,
		"moduleResolution": "node"
	},
	"include": ["."],
	"exclude": ["build", "node_modules"]
}
