{
	"compilerOptions": {
		"target": "ES2020",
		"module": "commonjs",
		"lib": ["ES2020", "DOM"],
		"allowJs": true,
		"outDir": "build",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"downlevelIteration": true,
		"sourceMap": true,
		"moduleResolution": "node",
		"isolatedModules": true
	},
	"include": ["**/*"],
	"exclude": ["build", "node_modules"]
}
